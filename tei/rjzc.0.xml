                        <head type="h3" xml:id="tg714.3.2">Gotthold Ephraim Lessing</head>


                        <head type="h2" xml:id="tg714.3.3">D. Faust</head>

                        <milestone unit="sigel" n="Lessing-W Bd. 2" xml:id="tg714.3.4"/>
